---
export interface Props {
  title: string;
}

const { title } = Astro.props;
import '../styles/global.css';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="A modern news website built with Astro" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body class="bg-gray-50 text-gray-900">
    <header class="bg-white shadow-sm border-b">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center py-6">
          <div class="flex items-center">
            <h1 class="text-3xl font-bold text-gray-900">
              <a href="/" class="hover:text-blue-600">NewsHub</a>
            </h1>
          </div>
          <nav class="hidden md:flex space-x-8">
            <a href="/" class="text-gray-700 hover:text-blue-600 font-medium">Home</a>
            <a href="/news" class="text-gray-700 hover:text-blue-600 font-medium">News</a>
            <a href="/about" class="text-gray-700 hover:text-blue-600 font-medium">About</a>
            <a href="/studio" class="text-gray-700 hover:text-blue-600 font-medium">Content</a>
          </nav>
        </div>
      </div>
    </header>
    
    <main>
      <slot />
    </main>
    
    <footer class="bg-gray-800 text-white mt-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="text-center">
          <p>&copy; 2024 NewsHub. All rights reserved.</p>
        </div>
      </div>
    </footer>
  </body>
</html>