---
import Layout from '../layouts/Layout.astro';
---

<Layout title="NewsHub - Latest News">
  <section class="py-16 bg-gradient-to-r from-blue-600 to-purple-600">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center text-white">
        <h1 class="text-4xl md:text-6xl font-bold mb-6">
          Stay Informed with NewsHub
        </h1>
        <p class="text-xl md:text-2xl mb-8 text-blue-100">
          Your trusted source for breaking news and in-depth analysis
        </p>
        <a 
          href="/news" 
          class="inline-block bg-white text-blue-600 px-8 py-3 rounded-lg font-semibold hover:bg-gray-100 transition-colors"
        >
          Read Latest News
        </a>
      </div>
    </div>
  </section>

  <section class="py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-center mb-12">Featured Categories</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-6">
        <div class="bg-white rounded-lg shadow-md p-6 text-center hover:shadow-lg transition-shadow">
          <h3 class="text-xl font-semibold mb-2 text-blue-600">Technology</h3>
          <p class="text-gray-600">Latest tech trends and innovations</p>
        </div>
        <div class="bg-white rounded-lg shadow-md p-6 text-center hover:shadow-lg transition-shadow">
          <h3 class="text-xl font-semibold mb-2 text-red-600">Politics</h3>
          <p class="text-gray-600">Political news and analysis</p>
        </div>
        <div class="bg-white rounded-lg shadow-md p-6 text-center hover:shadow-lg transition-shadow">
          <h3 class="text-xl font-semibold mb-2 text-green-600">Sports</h3>
          <p class="text-gray-600">Sports news and updates</p>
        </div>
        <div class="bg-white rounded-lg shadow-md p-6 text-center hover:shadow-lg transition-shadow">
          <h3 class="text-xl font-semibold mb-2 text-purple-600">Entertainment</h3>
          <p class="text-gray-600">Entertainment and celebrity news</p>
        </div>
        <div class="bg-white rounded-lg shadow-md p-6 text-center hover:shadow-lg transition-shadow">
          <h3 class="text-xl font-semibold mb-2 text-orange-600">Business</h3>
          <p class="text-gray-600">Business and financial news</p>
        </div>
      </div>
    </div>
  </section>
</Layout>
